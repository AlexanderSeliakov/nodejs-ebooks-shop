</head>
<body>
    <%- include('includes/header.ejs') %> 

    <main class="container my-5">

        <div class="row mb-2">

            <div class="card col-sm-12 flex-sm-row mx-2 m-sm-0">

                <div class="mr-auto my-3"> 
                    <img class="mx-auto" src="/<%= book.cover %>" alt="<%= book.title%>">
                </div>

                <!-- <form action="" method="POST">  d-flex flex-column align-items-start-->

                <div class="card-body d-flex flex-column text-wrap align-items-start">

                    <h3 class="mb-0"><%= book.title %></h3>

                    <a class="text-info" href="/author/<%= book.author.split(" ").join("_") %>">
                        <%= book.author %>
                    </a>

                    <a class="text-dark" href="/series/<%= book.series.split(" ").join("_") %>">
                       <ins> <%= book.series %></ins>
                    </a>

                    <p class="mt-3"><%= book.description %></p>
                    
                    <div class="btns w-100 mt-4 d-flex justify-content-between">
                        <% if (isBought.length) { %>
                            <!-- <p class="btn mt-3 btn-success" name= "/">You already bought that book</p> -->
                            <a href="/download/<%= book._id %>" class="btn btn-success">Download</a>
                        <% }else if (add.length) { %>
                            <form action="/removeFromCart" method="POST"> 
                                <button class="btn btn-success removeFromCart" name= "removeFromCart" value = '<%= book._id %>'>added</button>
                            </form>
                        <% }else{ %>
                            <form action="/addToCart" method="POST"> 
                                <button class="btn btn-outline-info addToCart" name="addToCart" value = '<%= book._id %>'>buy for  <%= book.price %>$</button>
                            </form>
                        <% } %>
                        <% if (isAdmin) { %>
                            <a href="/edit_book/<%=book._id%>?edit=true" class="btn btn-outline-dark" name="change">Change</a>
                        <% } %>

                    </div>

                </div>
            </div>
        </div>
    </main>

    
    <%- include('includes/footer.ejs') %> 
