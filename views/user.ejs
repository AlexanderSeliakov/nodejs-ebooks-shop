<%- include('includes/head.ejs') %> 
</head>
<body>
    <%- include('includes/header.ejs') %> 

    <% if (messageToUser) { %>
        <p class="container alert alert-success mt-3"><%= messageToUser %></p>
    <% } %>

    <main class='container py-4'>        
        <nav class="nav navbar-expand mb-3">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <h4>Hi, <%= name %> </h4>
                </li>
            </ul>
        </nav>



        <h4>Your books</h4>
        <div class="row allbooks">

            <% for( let book of books.orders) { %>
                <div class="col-6 col-md-4 col-xl-3 mb-5">
                    <a class=" d-flex justify-content-center" href="/book/<%=book.path%>/<%=book._id%>" >
                        <img src="/<%= book.cover %>" alt="<%= book.title%>">
                    </a> 
                    <p class="text-dark"><%=book.title%></p>
                </div>
                
            <% } %>
              

        </div>
    </main>

    <%- include('includes/footer.ejs') %> 