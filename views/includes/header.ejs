<header>
    <nav class="navbar-light bg-light navbar navbar-expand-md">

        <a href="/" class="navbar-brand">Best Books</a>
    
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarBookContent2"
            aria-controls="navbarBookContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse navbarContent" id="navbarBookContent2">
            <form class="input-group input-group-sm search-form w-50" action="/search" method="POST">

                <input name="search" type="text" class="form-control" aria-describedby="search-btn" placeholder="Name of book">

                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="search-btn" name="search-btn">Search</button>
                </div>

            </form>
    
            
            <ul class="navbar-nav ml-auto logins">
    
            <% if (!isAuthenticated) { %>
                    <li class="nav-item log-in dropdown">
                        <a href="" class="nav-link dropdown-toggle" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="outline: 0">Sign in
                        </a>
                        <div class="dropdown-menu log_in dropdown-menu-right " aria-labelledby="navbarDropdown">
                            <% if (messageToUser) { %>
                                <p class="alert alert-warning mt-3"><%= messageToUser %></p>
                            <% } %>
                            <form action="/login" method="POST">
                                <div class="inpt">
                                    <label for="email">Email</label>
                                    <input class="form-control" id="email" name="email" type="mail" value="<%= keepetInput.email %>" required>
                                </div>
                    
                                <div class="inpt mt-3">
                                    <label for="password">Password</label>
                                    <input class="form-control" id="password" name="password" type="password"  required autocomplete="on" >
                                </div>
                                <button class="btn mt-4 btn-outline-info" type="submit" name="login_button">log in</button>
                                <a href="/reset" class="reset" style="color:black">Forgot Password?</a>
                                <a href="/signup" class="register" style="color:black">Register</a>
    
                            </form>
    
                        </div>
    
                    </li>
            <% } else { %>
                <li class="nav-item mr-0 ">
                    <a href="/user" class="nav-link "> Hi, <%= name %></a>
                </li>  

                <!-- <li class="nav-item dropdown mr-2 ml-0">
                    <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="outline: 0"></a>
                    <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown2">
                        <form action="/logout" method="POST" class="dropdown-item">
                            <button class="ml-3 btn btn-outline-info" type="submit" name="login_button">log out</button>
                        </form>
                    </div>

                </li> -->
                <% } %>

                <li class="nav-item mr-4">
                    <a href="/cart" class="nav-link"><i class="fas fa-shopping-cart ">(<%= quantity %>)</i></a>
                </li>

                <% if (isAuthenticated) { %>
                <li class="nav-item ml-auto logout">
                    <form action="/logout" method="POST" class="dropdown-item">
                        <button class="btn btn-outline-danger" type="submit" name="login_button">log out</button>
                    </form>
                </li>
                <% } %>


            </ul>
        </div>
    </nav>
    
    <nav class=" nav navbar-expand px-2  navbar-dark bg-dark">
    
        <div class="nav-scroller navbarContent" id="navbarBookContent">

            <ul class="navbar-nav">
    
                <li class="nav-item dropdown">
                    <a href="/author" class="nav-link <%= path === '/author' ? 'active' : ''%> ">Autors</a>
                </li>

                <li class="nav-item dropdown">
                    <a href="/genre" class="nav-link  <%= path === '/genre' ? 'active' : ''%>">Genres</a>
                </li>
    
                <li class="nav-item dropdown">
                    <a href="/series" class="nav-link  <%= path === '/series' ? 'active' : ''%>">Series</a>
                </li>

                <li class="nav-item ">
                    <a href="/contacts" class="nav-link  <%= path === '/author' ? 'active' : ''%>">Contact Us</a>
                </li>   

                <% if (isAdmin) { %>
                    <li class="nav-item dropdown mr-0">
                        <a href="/add_book" class="nav-link  <%= path === '/add_book' ? 'active' : ''%>">Add New Book</a>
                    </li>
                <% } %> 
            </ul>
        </div>
    </nav>
</header>